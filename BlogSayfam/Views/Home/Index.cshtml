@model List<BlogSayfam.Models.Blog>
@{
    ViewBag.Title = "Index";
}






<div class="jumbotron jumbotron-fluid text-white jumbotron-image shadow" style="background-image: url(/Content/img/images.jpg);">
    <blockquote class="blockquote text-center">
        <p class="mb-0">Özlü bir söz :)</p>
        <footer class="blockquote-footer"><cite title="Source Title">Berkay ÜZÜMCÜ</cite></footer>
    </blockquote>

</div>
<div class="custom-control custom-switch">
    <input type="checkbox" class="custom-control-input" id="darkSwitch">
    <label class="custom-control-label" for="darkSwitch">Dark Mode</label>
</div>
<div class="container-sm containerhome ">
    <div class="lastupdate">
        <h2>En Yenisi</h2>
    </div>

    @{
        var last = Model.Last();
        foreach (var item in Model)
        {
            if (item == last)
            {
                <div class="card w-100 blog-card-header shadow">
                    <img src=@Url.Content(item.Resim) class="card-img-top topcardimg" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Baslik </h5>
                        <p class="card-text">
                            @(item.Icerik.Length < 280 ? item.Icerik : item.Icerik.Substring(0, 280) + "...")
                        </p>
                        @Html.ActionLink("Devamını oku", "BlogDetails", new { id = item.Id }, new { @class = "btn btn-outline-success" })

                        <span class="badge badge-secondary float-right">@item.eklenmeTarihi</span>

                    </div>
                </div>
            }
        }
    }
    <div class="last4-update">
        <h2>Son Eklenenler</h2>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
       
        }
        @for (int i = 0; i < Model.Count()-1; i++)
        {
            
        if (i >= (Model.Count() - 5)){

        <div class="col-md-6">
            <div class="card w-100 blog-card shadow">
                <img src=@Url.Content(Model[i].Resim) class="card-img-top cardimg" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Model[i].Baslik</h5>
                    <p class="card-text">
                        @(Model[i].Icerik.Length < 135 ? Model[i].Icerik : Model[i].Icerik.Substring(0, 135) + "...")
                    </p>
                    @Html.ActionLink("Devamını oku", "BlogDetails", new { id = Model[i].Id }, new { @class = "btn btn-outline-success" })
                    <span class="badge badge-secondary float-right">@Model[i].eklenmeTarihi</span>

                </div>
            </div>
        </div>
        }

        }





    </div>




</div>
